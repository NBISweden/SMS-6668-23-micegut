process {
 withName: MEGAHIT {
        cpus          = { check_megahit_cpus (16, task.attempt  ) }
        memory        = { check_max (80.GB * task.attempt, 'memory' ) }
        time          = { check_max (240.h  * task.attempt, 'time'   ) }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,250] ? 'retry' : 'finish' }
    }
}